{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true, // <--- AÑADIDO
    "emitDecoratorMetadata": true   // <--- AÑADIDO
  },
  "include": [
    "src/**/*.ts"
  ]
}